@model AppUserListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <span asp-validation-for="@Model.SurName" class="text-danger"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="ml-3">
                <h6 class="text-left ml-xl-2 mt-3 mb-4">Şu an ki resminiz:</h6>
                <img src="~/img/@Model.Picture" class="w-auto img-thumbnail mb-4" style="height:10rem!important;" alt="@Model.Name" />
            </div>

            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important;">
                    <h6 class="text-left ml-xl-2 mt-3 mb-4">Seçtiğiniz resminiz:</h6>
                    <img id="resimOnizleme" src="" class="w-auto img-thumbnail mb-4" style="height:10rem!important;" />
                </div>

            </div>
            <div class="col-md-2">

            </div>

            <div class="col-md-12">
                <input type="file" class="form-control-file" style=" border:groove;" name="resim" id="Resim" />
            </div>
        </div>
    </div>

    <div class="form-group">

        <button type="submit" class=" btn btn-info btn-sm mt-2">
            <i class="fas fa-thumbs-up mr-2"></i>
            Kaydet
        </button>

    </div>

</form>

@section JavaScript{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function (e) {


                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>

}
