@model List<AciliyetListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count != 0)
{
    <a asp-action="EkleAciliyet" asp-controller="Aciliyet"
       class="btn btn-sm btn-info my-2">
        <i class="fas fa-plus mr-2"></i> Yeni Aciliyet
    </a>
    <table class="table table-sm table-hover table-bordered mt-2">

        <thead class="table table-striped table-active">
            <tr>
                <th scope="col">Tanim</th>
                <th scope="col">İşlem</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Tanim</th>

                    <td>
                        <a asp-action="GuncelleAciliyet" asp-controller="Aciliyet"
                           asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-pencil-alt mr-2"></i> Düzenle
                        </a>
                    </td>
                </tr>
             }

        </tbody>

    </table>
 }

else

{
    <div class="text-center mt-4">

        <p class="lead"> Sistemde kayıtlı bir görev bulunamadı.</p>
        <a asp-action="EkleAciliyet" asp-controller="Aciliyet"
           class="btn btn-sm btn-info my-2">
            <i class="fas fa-plus mr-2"></i> Yeni Aciliyet
        </a>
    </div>
}
