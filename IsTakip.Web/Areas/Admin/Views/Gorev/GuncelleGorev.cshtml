@model GorevUpdateDto
@{
    ViewData["Title"] = "EkleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="GuncelleGorev" asp-controller="Gorev" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />

    <div class="form-group">
        <label asp-for="@Model.Ad"></label>
        <span asp-validation-for="@Model.Ad" class="text-danger"></span>
        <input asp-for="Ad" type="text" class="form-control" />
    </div>
    <div class="form-group ">
        <label>Açıklama</label>
        <span asp-validation-for="@Model.Aciklama" class="text-danger"></span>
        <input asp-for="Aciklama" class="form-control" />
    </div>
    <div class="form-group">
        <label>Aciliyet durumu Seçiniz</label>
        <span asp-validation-for="@Model.AciliyetId" class="text-danger"></span>
        <select asp-for="@Model.AciliyetId" type="text" class="form-control"
                asp-items="ViewBag.Aciliyetler">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-info btn-sm"> 
        <i class="fas fa-thumbs-up mr-2"></i> Kaydet</button>

</form>

@section JavaScript{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
