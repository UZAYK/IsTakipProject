@model PersonelGorevlendirListDto
@{
    ViewData["Title"] = "GorevlendirPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <form asp-action="AtaPersonel" method="post">
            <blockquote class="blockquote text-center">

                <p class="lead text-center">
                    Aşağıdaki göreve ilgili personel atanacaktır,
                    bu işlemi gerçekleştirmek istediğinizden emin misiniz?
                </p>

                <div class="form-group text-center">
                    <a asp-action="AtaPersonel" asp-route-id="@Model.Gorev.Id" class="btn btn-danger">Hayır, vazgeç</a>

                    <input type="hidden" name="PersonelId" value="@Model.AppUser.Id" />
                    <input type="hidden" name="GorevId" value="@Model.Gorev.Id" />

                    <button type="submit" class="btn btn-dark">Evet, görevlendir</button>
                </div>

            </blockquote>
        </form>

        <div class="col md-4 m-5 d-flex justify-content-center">
            <div class="col-md-4 m-1">

                <div class="card border border-primary">
                    <div class="card-header">
                        <h3 class="text-center lead pt-2"> Görev Bilgileri</h3>
                    </div>

                    <div class="card-body">

                        <h5 class="card-title">@Model.Gorev.Ad</h5>

                        <p class="card-text">@Model.Gorev.Aciklama</p>

                        <p class="card-text">
                            <strong> Aciliyet Durumu: </strong>

                            <span class="badge badge-danger">@Model.Gorev.Aciliyet.Tanim</span>
                        </p>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col md-8 m-2">


        <div class="card border border-primary mb-3 shadow">
            <div class="card-header">
                <h3 class="text-center lead"> Personel Bilgileri</h3>
            </div>
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/@Model.AppUser.Picture" class="card-img w-50 m-5" alt="@Model.AppUser.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">

                        <h5 class="card-title pt-xl-3" style="font-size:x-large">@Model.AppUser.Name @Model.AppUser.SurName</h5>

                        <p class="card-text">
                            <getirGorevAppUserId app-user-id="@Model.AppUser.Id"> </getirGorevAppUserId>
                        </p>

                        <p class="card-text">
                            <small class="text-muted">@Model.AppUser.Email</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
