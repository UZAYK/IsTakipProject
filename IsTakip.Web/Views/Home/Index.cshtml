@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="GirisYap" method="post" class="mt-5 w-50 mx-auto p-4 shadow">

    <h4 class="text-center">GİRİŞ YAP</h4>

    <div class="form-group ">
        <label asp-for="UserName">Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Şifre :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />

    </div> 
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
        <span asp-validation-for="RememberMe" class="text-danger"></span>

    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

    <a asp-action="KayitOl" class="btn btn-outline-primary btn-sm my-3 mr-2">Kayıt Ol</a>
    <input type="submit" class="btn btn-primary btn-sm" value="Giriş Yap" />

</form>