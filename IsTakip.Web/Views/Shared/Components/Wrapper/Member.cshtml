@model AppUserListViewModel

@{
    string active = string.Empty;
    if (TempData["Active"] != null)
    {
        active = TempData["Active"].ToString();
    }

    //string active2 = TempData["Active"]?.ToString();
}


<div class="border border-right " id="sidebar-wrapper">
    <div class="sidebar-heading">

        <img src="~/img/@Model.Picture" alt="@Model.Name" style="height:10rem!important;" class="w-auto img-thumbnail" />

    </div>
    <div class="list-group list-group-flush">

        <a asp-action="Index" asp-controller="IsEmri"
           class="list-group-item list-group-item-action @(active=="isemri"?"active":"")">
            <i class="fas fa-envelope-open-text mr-2"></i>
            Gelen İş Emirleri
        </a>
        <a asp-action="Index" asp-controller="Gorev" class="list-group-item list-group-item-action @(active=="gorev"?"active":"") ">
            <i class="fas fa-clipboard-check mr-2"></i>
            Tamamladığım İşler
        </a>

        <a href="#" class="list-group-item list-group-item-action ">
            <i class="far fa-bell mr-2"></i>
            @if (ViewBag.BildirimSayisi > 0)
            {
                <sub class="badge badge-info badge-pill position-absolute" style="bottom:0.625rem!important; left:1.7rem!important; font-size:8px;">
                    <small>@ViewBag.BildirimSayisi</small>
                </sub>
            }
            Bildirimler
        </a>

        <a asp-action="Index" asp-controller="Profil" class="list-group-item list-group-item-action @(active=="profil"?"active":"")">
            <i class="fas fa-user mr-2"></i>
            Profilim
        </a>
        <a asp-area="" asp-action="CikisYap" asp-controller="Home" class="list-group-item list-group-item-action ">
            <i class="fas fa-sign-out-alt mr-2"></i>
            Çıkış Yap
        </a>
    </div>
</div>